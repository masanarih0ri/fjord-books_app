<h3><%= t('.comment') %></h3>
<% commentable.comments.each do |comment| %>
  <div><%= t('.name') %>:
    <% if comment.user.name.present? %>
      <span><%= comment.user.name %></span>
    <% else %>
      <span><%= comment.user.email %></span>
    <% end %>
  </div>
  <div><%= comment.content %></div>
  <div><%= comment.created_at.strftime("%Y年%m月%d日 %T") %></div>
  <hr>
<% end %>